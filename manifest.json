{
  "manifest_version": 3,
  "name": "Goodreads Lookup",
  "version": "1.0",
  "description": "Quickly open the Goodreads page for any book you're viewing on Amazon",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.com/*",
        "*://www.amazon.co.uk/*",
        "*://www.amazon.ca/*",
        "*://www.amazon.de/*",
        "*://www.amazon.fr/*",
        "*://www.amazon.es/*",
        "*://www.amazon.it/*",
        "*://www.amazon.co.jp/*",
        "*://www.amazon.in/*",
        "*://www.amazon.com.au/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
